// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cars {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  year        String
  description String

  @@map("car")
}

model CarBrand {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String

  @@map("brand")
}

model Users {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  phone String

  @@map("user")
}
